<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane id="AnchorPane" prefHeight="10" prefWidth="10" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.CustomersScreenController">
     <children>
        <AnchorPane fx:id="customersPane">
            <children>
                <Label  fx:id="customersLabel"/>
                <Button  fx:id="customerSearchButton" onAction="#customerSearchButtonClick"/>
                <TextField  fx:id="customerSearchTextField"/>
                <TableView  fx:id="customersTable">
                    <columns>
                        <TableColumn fx:id="customerId"/>
                        <TableColumn fx:id="customerName"/>
                        <TableColumn fx:id="customerPhoneNumber"/>
                        <TableColumn fx:id="customerAddress"/>
                        <TableColumn fx:id="customerActive"/>
                    </columns>
                </TableView>
                <Button  fx:id="returnToCalendarScreen" onAction="#returnToCalendarScreen"/>
                <Button  fx:id="addCustomer" onAction="#addCustomer"/>
                <Button  fx:id="modifyCustomer" onAction="#modifyCustomer"/>
                <Button  fx:id="deleteCustomer" onAction="#deleteCustomer"/>
            </children>
        </AnchorPane>
    </children>
</AnchorPane>

    <children>
        <Label fx:id="customerId"/>
        <Label fx:id="addCustomerLabel"/>
        <Label fx:id="nameLabel"/>
        <Label fx:id="addressLabel"/>
        <Label fx:id="address2Label"/>
        <Label fx:id="cityLabel"/>
        <Label fx:id="countryLabel"/>
        <Label fx:id="postalCodeLabel"/>
        <Label fx:id="phoneLabel"/>
        <Label fx:id="activeLabel"/>
        <Label fx:id="customerIdValue"/>
        <TextField fx:id="nameText"/>
        <TextField fx:id="addressText"/>
        <TextField fx:id="address2Text"/>
        <ChoiceBox fx:id="cityChoiceBox" onAction="#chooseCity"/>
        <Label fx:id="countryLabelValue"/>
        <TextField fx:id="postalCodeText"/>
        <TextField fx:id="phoneText"/>
        <CheckBox fx:id="activeCheckBox"/>
